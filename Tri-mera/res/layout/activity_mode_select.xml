<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="5" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/color_blue_modeSelect"
        android:gravity="bottom"
        android:paddingTop="120dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/button_mode_easy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/single"
            android:gravity="bottom|center_horizontal"
            android:padding="20dp"
            android:text="App mode"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@drawable/hor_line" />

        <Button
            android:id="@+id/button_mode_hard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/multi"
            android:gravity="bottom|center_horizontal"
            android:padding="20dp"
            android:text="Tri-kit mode"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mintCream"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button_mode_easy_connect"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bluetooth_btn_selector"
        android:layout_centerHorizontal="true"
        android:gravity="right|center_vertical"
        android:padding="30dp"
        android:text="기기 검색"
        android:textAlignment="gravity"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_mode_easy_open"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button_mode_easy_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bluetooth_btn_selector"
        android:gravity="right|center_vertical"
        android:padding="30dp"
        android:text="기기검색 허용"
        android:textAlignment="gravity"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textView_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mode_easy_open"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"  
        android:layout_marginBottom="30dp"     
        android:text="블루투스를 이용해 기기를 연결해주세요" />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_state">

    <Button
        android:id="@+id/button_mode_easy_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:background="@drawable/select_controller"
        android:layout_margin="0dp"
        android:textAlignment="gravity"
        android:paddingBottom="50dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="컨트롤러로 사용할 기기를 선택해주세요." />
    </LinearLayout>

    
</RelativeLayout>